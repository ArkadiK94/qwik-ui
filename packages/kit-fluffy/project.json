{
  "name": "fluffy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/kit-fluffy/src",
  "projectType": "library",
  "targets": {
    "build-bin": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],

      "options": {
        "main": "packages/kit-fluffy/bin/index.ts",
        "outputPath": "dist/packages/kit-fluffy",
        "tsConfig": "packages/kit-fluffy/tsconfig.bin.json"
      }
    },
    "build-generators": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],

      "options": {
        "main": "packages/kit-fluffy/generators/index.ts",
        "outputPath": "dist/packages/kit-fluffy",
        "tsConfig": "packages/kit-fluffy/tsconfig.lib.json",
        "assets": [
          "packages/kit-fluffy/*.md",
          {
            "input": "./packages/kit-fluffy/src",
            "glob": "**/*.(ts|tsx)",
            "output": "./src"
          },
          {
            "input": "./packages/kit-fluffy",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/kit-fluffy",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "build": {
      "dependsOn": ["build-bin"],
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/kit-fluffy",
        "configFile": "packages/kit-fluffy/vite.config.ts",
        "mode": "lib"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/kit-fluffy/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/kit-fluffy/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/html",
        "configDir": "packages/kit-fluffy/.storybook",
        "outputDir": "dist/storybook/fluffy"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "disabling-publish-for-now": {
      "version": {
        "executor": "@jscutlery/semver:version",
        "options": {}
      },
      "version-dry": {
        "executor": "@jscutlery/semver:version",
        "options": {
          "dryRun": true,
          "releaseAs": "patch"
        }
      },
      "version-publish": {
        "executor": "@jscutlery/semver:version",
        "options": {
          "noVerify": true,
          "push": true,
          "releaseAs": "patch",
          "postTargets": ["fluffy:publish", "fluffy:push-to-github"]
        }
      },
      "publish": {
        "executor": "ngx-deploy-npm:deploy",
        "options": {
          "access": "public"
        }
      },
      "push-to-github": {
        "executor": "@jscutlery/semver:github",
        "options": {
          "title": "@qwik-ui/kit-fluffy@${version}",
          "tag": "${tag}",
          "notes": "${notes}"
        }
      }
    }
  },
  "tags": []
}
